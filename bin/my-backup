#!/bin/sh

# To backup important files.
backup_dir=~/backup

opam list -s --installed-roots --switch=system >| $backup_dir/opam_pkglist
dpkg --get-selections >| $backup_dir/pkglist
tar --exclude-backups --exclude-vcs --exclude-vcs-ignores               \
    -g $backup_dir/list -czf backup-$(date +%s).tar.gz                  \
    ~/.xmodmaprc ~/.emacs.d/bbdb ~/.ssh/                                \
    ~/.config/xfce4/terminal/terminalrc $backup_dir ~/doc/ ~/dotfiles/  \
    ~/latex/ ~/misc/ ~/univ/ /etc/apt/sources.list                      \
    /etc/apt/sources.list.d/
