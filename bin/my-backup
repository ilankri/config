#!/bin/sh

# To backup important files.
backup_dir=~/backup

opam list -s --installed-roots --switch=system > $backup_dir/opam_pkglist
dpkg --get-selections > $backup_dir/pkglist
tar -czf backup-$(date +%s).tar.gz -g$backup_dir/list --exclude-backups \
    --exclude-vcs --exclude-vcs-ignores ~/.xmodmaprc ~/.emacs.d/bbdb    \
    ~/.ssh/ ~/.config/xfce4/terminal/terminalrc $backup_dir ~/doc/      \
    ~/dotfiles/ ~/misc/ ~/univ/
